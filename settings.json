{
    "workbench.colorTheme": "One Dark Pro",
    "terminal.integrated.inheritEnv": false,
    "editor.lineNumbers": "relative",
    "vim.leader": " ",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "t"
            ],
            "commands": [
                "rust-analyzer.toggleInlayHints"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "k"
            ],
            "commands": [
                ":split"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "l"
            ],
            "commands": [
                ":vsplit"
            ]
        },
        {
            "before": [
                "<leader>",
                "q"
            ],
            "commands": [
                ":wq"
            ]
        },
        {
            "before": [
                "<leader>",
                "<leader>",
                "q"
            ],
            "commands": [
                ":q!"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "j"
            ],
            "commands": [
                "workbench.action.nextEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "h"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "commands": [
                "workbench.action.navigateLeft"
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "commands": [
                "workbench.action.navigateRight"
            ]
        },
        {
            "before": [
                "<leader>",
                "k"
            ],
            "commands": [
                "workbench.action.navigateUp"
            ]
        },
        {
            "before": [
                "<leader>",
                "j"
            ],
            "commands": [
                "workbench.action.navigateDown"
            ]
        },
        {
            "before": [
                "<leader>",
                "w"
            ],
            "commands": [
                "workbench.action.files.save"
            ]
        },
        {
            "before": [
                "<leader>",
                "W"
            ],
            "commands": [
                "workbench.action.files.saveAll"
            ]
        },
    ],
    "vim.easymotion": true,
    "vim.normalModeKeyBindings": [],
    "vim.insertModeKeyBindings": [],
    "vim.visualModeKeyBindings": [],
    "vim.commandLineModeKeyBindings": [],
    "workbench.sideBar.location": "left",
    "cSpell.userWords": [
        "groupby",
        "iloc",
        "ipython",
        "iterrows",
        "itertools",
        "notna",
        "numpy",
        "pyexasol",
        "revolut"
    ],
    "editor.autoIndent": "advanced",
    "editor.detectIndentation": true,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "editor.rulers": [
        {
            "column": 79,
            "color": "#424142"
        },
        100, // <- a ruler in the default color or as customized at column 0
        {
            "column": 120,
            "color": "#ff0000"
        },
    ],
    "files.associations": {
        "*.ini.base": "ini"
    },
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "editor.formatOnSave": true,
    "workbench.colorCustomizations": {
        "editor.findMatchHighlightBackground": "#8A7100",
        "editor.selectionHighlightBackground": "#8A7100",
    },
    "oneDarkPro.editorTheme": "ayu",
    "oneDarkPro.vivid": true,
}
